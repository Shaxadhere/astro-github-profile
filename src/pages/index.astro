---
import Layout from "../layouts/Layout.astro";
import { ThemeProvider } from "../components/Theme/ThemeProvider";
import {
  Avatar,
  Button,
  Typography,
  Menu,
  MenuHandler,
  MenuList,
  MenuItem,
} from "@material-tailwind/react";
import TwitterIcon from "../components/Icons/TwitterIcon";
import FacebookIcon from "../components/Icons/FacebookIcon";
import LinkedInIcon from "../components/Icons/LinkedInIcon";
import LocationIcon from "../components/Icons/LocationIcon";
import LinkIcon from "../components/Icons/LinkIcon";
import FolderIcon from "../components/Icons/FolderIcon";
import Dropdown from "../components/Common/Dropdown";
---

<ThemeProvider>
  <Layout title="Welcome to Astro.">
    <main>
      <div class="mx-auto flex max-w-screen-2xl p-[30px]">
        <div class="w-1/3">
          <div class="pr-[30px] gap-5 flex flex-col">
            <Avatar
              src="https://i.pravatar.cc/350"
              size="xxl"
              className="!rounded-sm w-[200px] h-[200px]"
              alt="avatar"
              variant="square"
            />
            <div>
              <h3 class="text-lg font-black">Dann Petty</h3>
              <h3 class="text-md text-muted">@DannPetty</h3>
            </div>

            <div>
              <p class="text-sm text-secondary">
                Head of @Epiccurrence. Freelance Designer, Filmmaker, Father of
                3 girls. #development, #design, #astro
              </p>
            </div>

            <div class="flex flex-nowrap gap-4">
              <TwitterIcon />
              <LinkedInIcon />
              <FacebookIcon />
            </div>

            <div>
              <Button fullWidth className="rounded-md h-12">Follow</Button>
            </div>

            <div class="flex flex-wrap flex-col gap-2">
              <div class="flex flex-wrap gap-2 items-center">
                <LocationIcon />
                <p class="text-muted text-sm">San Francisco, California</p>
              </div>
              <div class="flex flex-wrap gap-2 items-center">
                <LinkIcon />
                <a
                  href="https://behance.com/dannpetty"
                  target="_blank"
                  class="text-muted text-sm"
                >
                  behance.com/dannpetty
                </a>
              </div>
            </div>

            <div class="flex flex-col gap-2">
              <h3 class="text-md font-extrabold">Folders</h3>

              <div class="flex flex-wrap flex-row gap-2">
                <Button
                  size="sm"
                  className="!rounded-md flex items-center gap-3 bg-white min-w-fit"
                >
                  <FolderIcon />
                  <p class="text-black text-xs !normal-case">Landing Pages</p>
                </Button>
                <Button
                  size="sm"
                  className="!rounded-md flex items-center gap-3 bg-white min-w-fit"
                >
                  <FolderIcon />
                  <p class="text-black text-xs !normal-case">Apps</p>
                </Button>
                <Button
                  size="sm"
                  className="!rounded-md flex items-center gap-3 bg-white min-w-fit"
                >
                  <FolderIcon />
                  <p class="text-black text-xs !normal-case">Prototypes</p>
                </Button>
              </div>
            </div>

            <div class="flex flex-col gap-2">
              <h3 class="text-md font-extrabold">Teams</h3>
              <Avatar src="https://i.pravatar.cc/150" alt="avatar" />
            </div>
          </div>
        </div>

        <div class="w-full">
          <div class="flex justify-between items-center">
            <h2 class="text-2xl font-extrabold">Projects</h2>
            <div class="flex gap-2">
              <Typography
                as="li"
                variant="small"
                color="blue-gray"
                className="p-1 font-normal"
              >
                <a href="#" class="font-bold"
                  >Likes <span class="font-normal">(500)</span></a
                >
              </Typography>
              <Typography
                as="li"
                variant="small"
                color="blue-gray"
                className="p-1 font-normal"
              >
                <a href="#" class="font-bold"
                  >Following <span class="font-normal">(500)</span></a
                >
              </Typography>
              <Typography
                as="li"
                variant="small"
                color="blue-gray"
                className="p-1 font-normal"
              >
                <a href="#" class="font-bold"
                  >Followers <span class="font-normal">(500)</span></a
                >
              </Typography>

              <Dropdown client:load/>
            </div>
          </div>
        </div>
      </div>
    </main>
  </Layout>
</ThemeProvider>
